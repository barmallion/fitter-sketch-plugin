{
  "name": "Fitter",
  "description": "Resizes the selected layer to cover its containing artboard",
  "author": "Peter Berrecloth",
  "authorEmail": "peterberrecloth@gmail.com",
  "homepage": "https://github.com/pberrecloth/fitter-sketch-plugin",
  "version": 1.0,
  "bundleVersion": 1.0,
  "compatibleVersion": 41,
  "identifier": "com.fitter.sketchplugin",
  "commands": [
    {
      "name": "Fit To Artboard Width",
      "script": "fitter.js",
      "handler": "fitWidthToArtboard",
      "identifier": "fitWidthToArtboard"
    },
    {
      "name": "Fit To Artboard Height",
      "script": "fitter.js",
      "handler": "fitHeightToArtboard",
      "identifier": "fitHeightToArtboard"
    },
    {
      "name": "Fit To Artboard",
      "script": "fitter.js",
      "handler": "fitToArtboard",
      "identifier": "fitToArtboard"
    },
    {
      "name": "Fit To Artboard Margin...",
      "script": "fitter.js",
      "handler": "fitToArtboardMargins",
      "identifier": "fitToArtboardMargins"
    },
  ],
  "menu" : {
    "isRoot" : true,
    "items" : [
      {
        "title" : "Fitter",
        "items" : [
          "fitToArtboard",
          "fitWidthToArtboard",
          "fitHeightToArtboard",
          "-",
          "fitToArtboardMargins"
        ]
      }
    ]
  }
}
